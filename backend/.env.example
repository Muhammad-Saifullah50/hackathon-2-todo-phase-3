# Database (Neon PostgreSQL)
# Example: postgresql+asyncpg://neondb_owner:password@ep-cool-glade-a5o0zpxm.us-east-2.aws.neon.tech/neondb?sslmode=require
DATABASE_URL=postgresql+asyncpg://user:password@host.neon.tech/neondb?sslmode=require

# Zhipu AI API Key (for GLM-4.5-air model)
ZAI_API_KEY=your_zhipu_api_key_here

# Security
SECRET_KEY=your-secret-key-at-least-32-chars-long
CORS_ORIGINS=http://localhost:3000

# Better Auth Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
LOG_LEVEL=INFO

# Environment
ENVIRONMENT=development

# OpenAI Agent Configuration
AGENT_MODEL=zai/glm-4.5-air
AGENT_TEMPERATURE=0.7
AGENT_MAX_TOKENS=4096

# Conversation Settings
CONTEXT_WINDOW_SIZE=50
MAX_MESSAGE_LENGTH=2000
