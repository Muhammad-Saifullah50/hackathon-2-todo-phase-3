# Database (Neon PostgreSQL)
# Example: postgresql+asyncpg://neondb_owner:password@ep-cool-glade-a5o0zpxm.us-east-2.aws.neon.tech/neondb?sslmode=require
DATABASE_URL=postgresql+asyncpg://user:password@host.neon.tech/neondb?sslmode=require


# Security
BETTER_AUTH_SECRET=your-better-auth-secret-key-here
CORS_ORIGINS=["http://localhost:3000"]



# Logging
LOG_LEVEL=INFO

# Environment
ENVIRONMENT=development



# Conversation Settings
CONTEXT_WINDOW_SIZE=50
MAX_MESSAGE_LENGTH=2000

# MCP Server Configuration
# Host and port for MCP server (defaults: 0.0.0.0:8000)
MCP_HOST=0.0.0.0
MCP_PORT=8000

# MCP Server URL (for external clients to connect)
# On Vercel, this will be automatically set via VERCEL_URL
MCP_SERVER_URL=http://localhost:8000/mcp
MCP_SERVER_TOKEN=your-mcp-server-token-here

# Frontend URL for revalidation calls
FRONTEND_URL=http://localhost:3000

GEMINI_API_KEY=your-gemini-api-key-here
OPENROUTER_API_KEY=your-openrouter-api-key-here

