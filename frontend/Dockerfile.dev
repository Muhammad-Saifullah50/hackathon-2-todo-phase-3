FROM node:22-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies exactly as in lockfile
RUN npm ci

# Copy source code
COPY . .

# Next.js telemetry disable
ENV NEXT_TELEMETRY_DISABLED=1

EXPOSE 3000

# Start Next.js in development mode with hot reload
CMD ["npm", "run", "dev"]
